datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  id           Int        @id @default(autoincrement())
  title        String
  description  String     @db.Text
  image        String     
  cooking_type String
  cooking_time String
  notes        String     @db.Text

  macros       Macro?

  steps        Step[]
  categories   Category[]
  ingredients  Ingredient[]
  conditions   Condition[]

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("recipes")
}

model Macro {
  id            Int    @id @default(autoincrement())
  calories      String
  proteins      String
  fats          String
  carbohydrates String

  recipeId      Int    @unique
  recipe        Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@map("macros")
}

model Step {
  id          Int    @id @default(autoincrement())
  description String @db.Text

  recipeId    Int
  recipe      Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@map("steps")
}

model Category {
  id      Int      @id @default(autoincrement())
  name    String   @unique 
  
  recipes Recipe[]

  @@map("categories")
}

model Condition {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  
  recipes Recipe[]

  @@map("conditions")
}

model Ingredient {
  id      Int      @id @default(autoincrement())
  name    String   @unique

  recipes Recipe[]

  @@map("ingredients")
}